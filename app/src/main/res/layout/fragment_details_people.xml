<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.themovies.screens.detail.people.PeopleDetailsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagePeople"
                android:layout_width="180dp"
                android:layout_height="280dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:loadImage="@{viewModel.people.profilePath}"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvNamePeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/imagePeople"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/imagePeople"
                android:fontFamily="sans-serif-medium"
                android:text="@{viewModel.people.name}"
                android:textColor="@color/text_color"
                android:textSize="20sp"
                tools:text="name" />

            <TextView
                android:id="@+id/tvDepartPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNamePeople"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/imagePeople"
                android:text="@{viewModel.people.knownForDepartment}"
                android:textColor="@color/text_color"
                android:textSize="17sp"
                tools:text="depart" />

            <TextView
                android:id="@+id/tvDateBirthPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDepartPeople"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/imagePeople"
                android:text="@{viewModel.people.birthday}"
                android:textColor="@color/text_color"
                android:textSize="17sp"
                tools:text="date" />

            <TextView
                android:id="@+id/tvPlaceBirthPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDateBirthPeople"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@id/imagePeople"
                android:text="@{viewModel.people.placeOfBirth}"
                android:textColor="@color/text_color"
                android:textSize="17sp"
                tools:text="place" />

            <com.like.LikeButton
                android:id="@+id/btnLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPlaceBirthPeople"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@id/imagePeople"
                app:anim_scale_factor="2"
                app:icon_size="40dp"
                app:icon_type="heart"
                app:isLikedButton="@{viewModel.isLiked()}"
                app:like_drawable="@drawable/ic_heart_red"
                app:unlike_drawable="@drawable/ic_heart" />

            <View
                android:id="@+id/divider"
                style="@style/Divider"
                android:layout_below="@id/imagePeople"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tvDescriptionPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:text="@{viewModel.people.biography}"
                android:textColor="@color/text_color"
                android:textSize="17sp"
                tools:text="desc" />

            <View
                android:id="@+id/divider1"
                style="@style/Divider"
                android:layout_below="@id/tvDescriptionPeople"
                android:layout_marginBottom="8dp" />

        </RelativeLayout>

    </ScrollView>


</layout>

